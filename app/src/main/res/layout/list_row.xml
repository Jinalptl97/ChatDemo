<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lin_1"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/lin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/pink_arrow" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="100dp"
            android:background="@drawable/border1"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/txt_message_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asd"
                android:textColor="@color/black_color"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/txt_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_message"
                android:layout_gravity="right"
                android:text="5:30pm"
                android:textColor="@color/black_color"
                android:textSize="12dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="110dp"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/txt_message_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text=""
                android:textSize="18dp" />


            <TextView
                android:id="@+id/txt_time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="5:30pm"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/green_arrow" />

        <!--      <TextView
                  android:id="@+id/imageView"
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:layout_marginLeft="-15dp"
                  android:layout_marginTop="-18dp"
                  android:background="@drawable/arrow"
                  android:rotation="230" />-->

        <!--  <TextView
              android:layout_width="25dp"
              android:layout_height="20dp"
              android:layout_marginLeft="-15dp"
              android:layout_marginTop="-18dp"
              android:background="@drawable/new_arrow"
              android:rotation="230" />-->

    </LinearLayout>
</LinearLayout>